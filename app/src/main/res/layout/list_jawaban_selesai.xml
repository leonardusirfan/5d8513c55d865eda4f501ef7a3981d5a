<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_default">

    <TextView
        android:id="@+id/txt_tanggalKuis"
        android:layout_below="@id/txt_jawabanKuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_namaKuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btn_next"
        android:textColor="@color/color_orange_new"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_namaKuis"
        android:layout_toStartOf="@id/btn_next">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_telepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_email"
        android:layout_toStartOf="@id/btn_next">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="Telepon"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/txt_telepon"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_jawaban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_telepon"
        android:layout_toStartOf="@id/btn_next"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Jawaban"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_jawabanKuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_jawaban"
        android:layout_toStartOf="@id/btn_next"
        android:textColor="@color/color_black" />

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right_black" />
</RelativeLayout>