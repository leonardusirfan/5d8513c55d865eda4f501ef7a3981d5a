                <ImageView
                    android:layout_width="@dimen/gambarMenuUtama"
                    android:layout_height="@dimen/gambarMenuUtama"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_create_promo_baru" />
            </RelativeLayout>

            <RelativeLayout
